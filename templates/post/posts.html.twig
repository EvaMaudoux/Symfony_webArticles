{% extends 'base.html.twig' %}


{% block body %}
    <main class="container">
        <section id="posts">
            <h2 class="display-4 my-4">Liste des articles</h2>
            <div class="row">
                <div class="col-md-10 offset-1">
                    <table class="table table-hover "> {# classe boodstrap pour les tables #}

                        <thead>
                        <tr>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date de création</th>
                            <th>Catégorie</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td><img src="{{ asset('/img/posts/' ~ post.image) }}" alt="{{ post.title }}" class="img-post"></td> {# altgr + = #}
                                <td><a href="{{ path('post', {id:post.id}) }}">{{ post.title | capitalize }}</a></td>
                                <td>{{ post.createdAt|date('d/m/Y') }}</td>
                                <td>{{ post.category.name }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                </div>
            </div>
        </section>
    </main>

{% endblock %}